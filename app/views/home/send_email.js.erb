  alert.empty();
  $(".email-input, .name-input").css("border-bottom", "1px dashed #505050");
  var paperPlaneTL = new TimelineLite()
            .to($("svg"), 1, { opacity: 1 })
            .to($(".form-submit"), 0.5, { autoAlpha: 0 }, "-=1")
            .to($("svg #plane"), 2, { strokeDashoffset: 0 })
