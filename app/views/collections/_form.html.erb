<div class="row justify-content-center text-center">
  <div class="col-md-12">
    <%= form_with(model: collection, local: true) do |form| %>
      <% if collection.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            <h2><%= pluralize(collection.errors.count, "error") %> prohibited this collection from being saved:</h2>
          </div>
          <ul>
          <% collection.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

          <div class="form-group">
            <%= form.label :name %>
        <%= form.text_field :name, id: :collection_name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :visible %>
        <%= form.check_box :visible, id: :collection_visible, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :position %>
        <%= form.number_field :position, id: :collection_position, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :picture %>
        <%= form.file_field :picture, id: :collection_picture, class: 'form-control' %>
          </div>

          <div class="actions">
        <%= form.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
