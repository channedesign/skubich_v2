<p id="notice"><%= notice %></p>

<h1>Jewelries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Inspiration</th>
      <th>Material</th>
      <th>Visible</th>
      <th>Position</th>
      <th>Picture</th>
      <th>Collection</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jewelries.each do |jewelry| %>
      <tr>
        <td><%= jewelry.name %></td>
        <td><%= jewelry.inspiration %></td>
        <td><%= jewelry.material %></td>
        <td><%= jewelry.visible %></td>
        <td><%= jewelry.position %></td>
        <td><%= jewelry.picture %></td>
        <td><%= jewelry.collection %></td>
        <td><%= link_to 'Show', jewelry %></td>
        <td><%= link_to 'Edit', edit_jewelry_path(jewelry) %></td>
        <td><%= link_to 'Destroy', jewelry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

