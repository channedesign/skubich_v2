<div class="row justify-content-center text-center">
  <div class="col-md-12">
    <%= form_with(model: jewelry, local: true) do |form| %>
      <% if jewelry.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            <h2><%= pluralize(jewelry.errors.count, "error") %> prohibited this jewelry from being saved:</h2>
          </div>
          <ul>
          <% jewelry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="row text-center">
          <div class="form-group col-12">
            <%= form.label :name %>
            <%= form.text_field :name, id: :jewelry_name, class: 'form-control' %>
          </div>

          <div class="form-group col-6">
            <%= form.label :inspiration %>
            <%= form.text_field :inspiration, id: :jewelry_inspiration, class: 'form-control' %>
          </div>

          <div class="form-group col-6">
            <%= form.label :material %>
            <%= form.text_field :material, id: :jewelry_material, class: 'form-control' %>
          </div>



          <% if jewelry.picture? %>
            <div class="col-6 mx-auto">
              <%= image_tag jewelry.picture.url, class: 'form-img' %>
            </div>
          <% end %>
          <div class="form-group col upload-btn-wrapper">
            <button class="btn btn-custom"><%= jewelry.picture? ? 'Upload Different Picture' : 'Upload Picture' %></button>
            <%= form.file_field :picture, id: :jewelry_picture %>
          </div>

          <div class="form-group col-12">
            <div class="form-check">
              <%= form.label :collection_id %><br>
              <%= form.collection_radio_buttons :collection_id, Collection.all, :id, :name %>
            </div>
          </div>

          <div class="actions mx-auto">
            <%= form.submit class: 'btn btn-secondary' %>
          </div>
      </div>
    <% end %>
  </div>
</div>
