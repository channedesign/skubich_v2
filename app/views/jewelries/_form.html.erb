<div class="row justify-content-center text-center">
  <div class="col-md-12">
    <%= form_with(model: jewelry, local: true) do |form| %>
      <% if jewelry.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            <h2><%= pluralize(jewelry.errors.count, "error") %> prohibited this jewelry from being saved:</h2>
          </div>
          <ul>
          <% jewelry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

          <div class="form-group">
            <%= form.label :name %>
        <%= form.text_field :name, id: :jewelry_name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :inspiration %>
        <%= form.text_field :inspiration, id: :jewelry_inspiration, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :material %>
        <%= form.text_field :material, id: :jewelry_material, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :visible %>
        <%= form.check_box :visible, id: :jewelry_visible, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :position %>
        <%= form.number_field :position, id: :jewelry_position, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :picture %>
        <%= form.text_field :picture, id: :jewelry_picture, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :collection_id %>
        <%= form.text_field :collection_id, id: :jewelry_collection_id, class: 'form-control' %>
          </div>

          <div class="actions">
        <%= form.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
